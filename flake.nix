{
  inputs = {
    nixpkgs.url = "github:nixos/nixpkgs?ref=nixos-25.05";
    nixpkgs-unstable.url = "github:nixos/nixpkgs?ref=nixos-unstable";
    flake-utils.url = "github:numtide/flake-utils";
    kernel-firecracker = {
      # This is the kernel tree generated by manually following this script:
      # https://github.com/firecracker-microvm/firecracker/blob/a8ae5635e5b35cc4/resources/hiding_ci/build_and_install_kernel.sh
      url = "github:bjackman/linux?ref=firecracker-host";
      flake = false;
    };
  };

  outputs =
    inputs@{
      self,
      nixpkgs,
      nixpkgs-unstable,
      flake-utils,
      ...
    }:
    flake-utils.lib.eachDefaultSystem (
      system:
      let
        pkgs = import nixpkgs { inherit system; };
      in
      {
        formatter = pkgs.nixfmt-tree;

        devShells.default = pkgs.mkShell {
          packages = with pkgs; [ nixos-rebuild ];
        };
      }
    )
    // flake-utils.lib.eachDefaultSystemPassThrough (system: {
      nixosConfigurations.aethelred = nixpkgs.lib.nixosSystem {
        system = "x86_64-linux";
        modules = [
          ./modules/aethelred.nix
          {
            # Useful for poking around for experiments
            nix.registry.nixpkgs-unstable.flake = nixpkgs-unstable;
            nixpkgs.overlays = [ self.overlays.firecracker ];
          }
        ];
      };

      overlays.firecracker = (
        final: prev: {
          linuxPackages_firecracker = prev.linuxPackages_custom {
            version = "6.17.0-rc3";
            src = inputs.kernel-firecracker;
            # Use a massive config since that's the only thing I know makes Docker work.
            configfile = prev.linux.configfile;
          };
        }
      );
    });
}
